<div class="main columns">
  <p><%= notice %></p>

  <div class="left-nav column">
    <h2>ユーザー情報</h2>
    <%= link_to '新規投稿', new_article_path %>
  </div>

  <div class="main-contents column">
    <h2>記事一覧</h2>
      <table class="table">
        <% @articles.each do |article| %>
          <tr class="box">
            <td><%= article.title %></td>
            <td><%= image_tag article.image.url%></td>
            <td><%= article.content %></td>
            <td><%= link_to '詳細を確認する', article_path(article.id) %></td>
            <td><%= link_to "編集する", edit_article_path(article.id) %></td>
          </tr>
        <% end %>
      </table>
  </div>

  <div class="right-nav column">
    <h2>宿泊情報</h2>
    <p>右側</p>
  </div>
</div>

<footer class="footer">
  <div class="content has-text-centered">
    <p>
