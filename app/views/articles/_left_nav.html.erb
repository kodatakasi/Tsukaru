  <div class="left-nav column">
    <h2>ユーザー情報</h2>
    <div class="box">
    <% if user_signed_in? %>
      <figure class="image is-128x128">
        <%= image_tag(current_user.image, width: 96, class: 'image is-rounded') if current_user.image.attached? %>
      </figure>
        <p><%= current_user.name %></p>
        <p><%= current_user.email %></p>
        <%= link_to "自分の投稿#{current_user.articles.count}件", articles_path(mine: "true") %>
        <br>
        <%= link_to "お気に入り投稿#{current_user.favorites.count}件", articles_path(like: "true") %>

      <% else %>
        <figure class="image is-96x96">
          <%= image_tag 'blank-profile-picture-973460__480.png', class: 'is-rounded'%>
        </figure>
        <p>ユーザー名</p>
        <p>自己紹介コメント</p>
      <% end %>
      <div class="container">
        <% if user_signed_in? %>
          <%= link_to "新規投稿", new_article_path %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "新規登録", new_user_registration_path %>
          <%= link_to "ログイン", new_user_session_path %>
        <% end %>
       </div>
    </div>
  </div>